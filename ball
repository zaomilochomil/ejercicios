package ball;

public class ball {
		private double x;
		private double y;
		private double xStep;
		private double yStep;
		public double xy;
		public double xyStep;
		public ball(){
			x=0;
			y=0;
		}
		public ball(double x, double y, double xStep, double yStep){
			this.x=x;
			this.y=y;
			this.xStep=xStep;
			this.yStep=yStep;
		}
		public double getX() {
			int x= 3;
			return x;
		}

		public void setX(double x) {
			this.x = x;
		}

		public double getY() {
			int y= 7;
			return y;
		}

		public void setY(double y) {
			this.y = y;
		}

		public double getxStep() {
			return xStep;
		}

		public void setxStep(double xStep) {
			this.xStep = xStep;
		}

		public double getyStep() {
			return yStep;
		}

		public void setyStep(double yStep) {
			this.yStep = yStep;
		}
		public String mensaje(){
			String mensaje = " Las coordenadas son: ";
			return mensaje;
		}
		public double getXY(){
			return xy;
		}
		public void setXY(double x, double y){
			this.xy=xy;
		}
		public double getXYStep(){
			return xyStep;
		}
		public void setXYStep(double xStep, double yStep){
			this.xStep=xStep;
			this.yStep=yStep;
			
		}
		}
Aplicaci√≥n
package ball;

public class balls {
		public static void main(String [] args){
			ball b1 = new ball();
			System.out.println(b1.mensaje()+" x= "+b1.getX()+", y= "+b1.getY());
			
			ball b2 = new ball();
			System.out.println(b2.mensaje()+" x= "+b2.getX()+", y= "+b2.getY());
			
			ball b3 = new ball();
			System.out.println(b3.mensaje()+" x= "+b3.getX()+", y= "+b3.getY());
		    
		}
		}
